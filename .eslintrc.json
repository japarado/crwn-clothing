{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["warn", "tab", { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-empty": "warn",
    "no-unused-vars": "warn",
    "no-var": "warn",
    "prefer-const": "warn",
    "arrow-parens": "warn",
    "brace-style": ["warn", "allman"],
    "space-infix-ops": ["warn", { "int32Hint": false }]
  }
}
